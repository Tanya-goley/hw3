<h1><%= @place["name"] %></h1>

<% if @entries.present? %> <!-- Verify if there are any records in @entries -->
  <% for entry in @entries %> <!-- Loop through each journal entry -->
      <h3><%= entry["title"] %></h3>
      <p><%= entry["occurred_on"] %></p>
      <p><%= entry["description"] %></p>
  <% end %>
<% else %>
  <p>No posts found.</p>
<% end %>

<p> 
  <a href="/entries/new?id=<%= @place["id"] %>">Add new post</a> 
</p>
<p> 
  <a href="/">Go back to places</a> 
</p>